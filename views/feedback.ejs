<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Mess Feedback</title>
    <link rel="stylesheet" href="/css/menu">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="p-4">

  <!-- Go to Dashboard Button -->
  <!-- <a href="/home" class="btn btn-outline-dark position-absolute" style="top: 20px; left: 20px;">Go to Dashboard</a> -->

  <div class="container">
    <h2 class="mb-4 text-center">Submit Feedback</h2>

    <form action="/feedback/submit" method="POST">
      <div class="mb-3">
        <label for="studentName" class="form-label">Your Name</label>
        <input type="text" name="studentName" id="studentName" class="form-control" required>
      </div>

      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <select name="rating" id="rating" class="form-select">
          <option value="5">⭐️⭐️⭐️⭐️⭐️</option>
          <option value="4">⭐️⭐️⭐️⭐️</option>
          <option value="3">⭐️⭐️⭐️</option>
          <option value="2">⭐️⭐️</option>
          <option value="1">⭐️</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="comments" class="form-label">Your Comments</label>
        <textarea name="comments" id="comments" class="form-control" rows="4"></textarea>
      </div>

      <button type="submit" class="btn btn-warning">Submit Feedback</button>
      <a href="/home" class="btn btn-secondary" style="top: 20px; left: 20px;">Go to Dashboard</a>

    </form>

    <h2 class="mb-4 mt-5 text-center">Recent Feedback</h2>

    <!-- Feedback List -->
    <ul class="list-group">
      <% feedbacks.forEach(feedback => { %>
        <li class="list-group-item mb-3">
          <h5><strong><%= feedback.studentName %></strong> (⭐ <%= feedback.rating %>)</h5>
          <p><%= feedback.comments %></p>
          <small class="text-muted"><%= feedback.createdAt.toLocaleString() %></small>
        </li>
      <% }); %>
    </ul>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
