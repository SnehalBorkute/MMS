<!-- Login Page-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="form-container">
        <h2>Login</h2>
        <% if (typeof error !== 'undefined') { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>
        
        <form action="/auth/login" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="Enter your email" required autocomplete="off">
            </div>
            <!-- <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter your password" required minlength="6">
                <button type="button" onclick="togglePassword()">üëÅ</button>
            </div> -->

            <div class="form-group">
                <label for="password">Password</label>
                <div class="password-wrapper">
                    <input type="password" name="password" id="password" placeholder="Enter your password" required minlength="6">
                    <button type="button" onclick="togglePassword()">üëÅ</button>
                </div>
            </div>
            
            <button type="submit" class="submit-btn">Login</button>
            <!-- Add this just below the login button -->
<p><a href="/auth/forgot-password">Forgot Password?</a></p>

        </form>
        <p>Don't have an account? <a href="/auth/signup">Sign Up</a></p>
    </div>
    
    <script>
        function togglePassword() {
            let passwordField = document.getElementById("password");
            passwordField.type = passwordField.type === "password" ? "text" : "password";
        }
    </script>
</body>
</html>  
